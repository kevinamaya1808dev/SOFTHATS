<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogoFragment">

    <TextView
        android:id="@+id/tvTituloCatalogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="76dp"
        android:layout_marginTop="24dp"
        android:shadowColor="#000000"
        android:shadowDx="4"

        android:shadowDy="4"
        android:shadowRadius="8"
        android:text="Explora nuestra colecciÃ³n"
        android:textColor="#FFFFFF"

        android:textSize="24sp"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutBusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloCatalogo">

        <EditText
            android:id="@+id/etBuscar"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_buscador_redondeado"
            android:hint="Buscar gorras..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:textSize="14sp"
            android:inputType="text"
            android:maxLines="1"/>

        <ImageButton
            android:id="@+id/btnOrdenar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"

            android:src="@drawable/ic_sort"
            android:background="@drawable/fondo_boton_negro"
            app:tint="#FFFFFF"

            android:padding="10dp"
            android:scaleType="fitCenter"
            android:elevation="4dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGorras"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutBusqueda"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_gorra" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>