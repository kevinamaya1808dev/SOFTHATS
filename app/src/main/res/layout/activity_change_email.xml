<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- LOGO -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@drawable/icono"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true" />

        <!-- TARJETA OSCURA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#66000000"
            android:padding="20dp"
            android:layout_marginTop="24dp">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar correo electrónico"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp" />

            <!-- CORREO ACTUAL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo actual"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvEmailActualValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usuario@email.com"
                android:textColor="#D0D0D0"
                android:layout_marginBottom="16dp" />

            <!-- CONTRASEÑA ACTUAL -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Contraseña actual"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#BDBDBD"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp" />

            <!-- NUEVO CORREO -->
            <EditText
                android:id="@+id/etNewEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nuevo correo electrónico"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#BDBDBD"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="16dp" />

            <!-- CONFIRMAR NUEVO CORREO -->
            <EditText
                android:id="@+id/etConfirmNewEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Confirmar nuevo correo"
                android:background="@android:color/transparent"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/white"
                android:textColorHint="#BDBDBD"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="24dp" />

            <!-- BOTÓN GUARDAR -->
            <TextView
                android:id="@+id/btnSaveEmail"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="Guardar cambios"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:background="#505050"
                android:layout_marginBottom="16dp" />

            <!-- REGRESAR -->
            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regresar"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>
</ScrollView>
