<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- HEADER -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar correo electrónico"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/headerBg"
        app:layout_constraintBottom_toBottomOf="@id/headerBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardChangeEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Correo actual -->
            <TextView
                android:id="@+id/tvEmailActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo actual"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvEmailActualValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="usuario@email.com"
                android:textColor="#757575"
                android:layout_marginBottom="16dp"/>

            <!-- Nuevo correo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nuevo correo electrónico">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón -->
            <Button
                android:id="@+id/btnSaveEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Guardar cambios"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:layout_marginTop="24dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
