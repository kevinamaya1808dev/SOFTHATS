<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetalleGorraActivity">

    <!-- Contenido Principal Desplazable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <!-- 1. Imagen de la Gorra -->
            <ImageView
                android:id="@+id/ivFotoDetalle"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- 2. Botón de Favorito (Corazón/Estrella) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabFavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@android:drawable/btn_star_big_off"
                app:backgroundTint="@color/white"
                app:tint="@null"
                app:layout_constraintBottom_toBottomOf="@+id/ivFotoDetalle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivFotoDetalle" />

            <!-- 3. Nombre -->
            <TextView
                android:id="@+id/tvNombreDetalle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivFotoDetalle"
                tools:text="GORRA TRIPLE BLACK EDITION" />

            <!-- 4. Precio -->
            <TextView
                android:id="@+id/tvPrecioDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="22sp"
                android:textStyle="italic"
                android:textColor="@color/primary"
                app:layout_constraintStart_toStartOf="@+id/tvNombreDetalle"
                app:layout_constraintTop_toBottomOf="@+id/tvNombreDetalle"
                tools:text="$1749.00 MXN" />

            <!-- 5. Descripción -->
            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/tvNombreDetalle"
                app:layout_constraintStart_toStartOf="@+id/tvNombreDetalle"
                app:layout_constraintTop_toBottomOf="@+id/tvPrecioDetalle"
                tools:text="Aquí va la descripción detallada del producto..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- BARRA INFERIOR CON CONTROLES (Misma lógica de cantidad que ya tenías) -->
    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- CONTADOR DE CANTIDAD (+ 1 -) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/ic_launcher_background"
                android:backgroundTint="#F0F0F0"
                android:layout_marginEnd="16dp"
                android:padding="4dp">

                <Button
                    android:id="@+id/btnRestarDetalle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    style="?attr/borderlessButtonStyle"/>

                <TextView
                    android:id="@+id/tvCantidadDetalle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="12dp"/>

                <Button
                    android:id="@+id/btnSumarDetalle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:minWidth="0dp"
                    style="?attr/borderlessButtonStyle"/>
            </LinearLayout>

            <!-- BOTÓN AÑADIR GRANDE -->
            <Button
                android:id="@+id/btnAddCarrito"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Añadir al Carrito"
                android:textSize="16sp"
                android:backgroundTint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>