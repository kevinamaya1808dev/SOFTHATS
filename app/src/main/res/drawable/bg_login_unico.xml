<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo semitransparente bonito -->
    <solid android:color="#33111111" />

    <!-- Bordes redondeados -->
    <corners android:radius="26dp" />

    <!-- Borde suave blanco -->
    <stroke
        android:width="1dp"
        android:color="#55FFFFFF" />

    <!-- Sombra ligera (Android 9+ la respeta) -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

</shape>
